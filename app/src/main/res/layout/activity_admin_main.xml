<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorAccentA"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLayout"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/welcome"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"

                android:text="edwin"
                android:id="@+id/userName"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:clipToPadding="false"
                android:paddingTop="5dp"
                android:scrollbars="none"
                android:scrollingCache="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"

                    android:orientation="vertical">


                    <LinearLayout
                        android:background="@color/colorAccentA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/linearRouteManager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_shadow"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:background="@drawable/icon_background"
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="30dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_car"/>
                            <TextView
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:text="@string/route_management"
                                android:textSize="24sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:background="@drawable/layout_shadow"
                            android:id="@+id/linearActiveTracking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="30dp"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_active"/>

                            <TextView
                                android:layout_marginTop="2dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@android:color/black"
                                android:text="@string/active_tracking"
                                android:textSize="24sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/layout_shadow"
                            android:id="@+id/linearBookedCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="30dp"
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_booked"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="@string/booked_customers"
                                android:textSize="24sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:background="@drawable/layout_shadow"
                            android:id="@+id/linearVehicleRegistration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="30dp"
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_vehicle"/>
                            <TextView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="@string/vehicle_registration"
                                android:textSize="24sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/layout_shadow"
                            android:id="@+id/linearDriverRegistration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="30dp"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_driver"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/driver_registration"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearUserNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_shadow"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="30dp"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_start"/>

                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@android:color/black"
                                android:text="@string/start_tracker"
                                android:textSize="24sp"/>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/AdminLogout"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>