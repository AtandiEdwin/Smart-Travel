<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentA"
    tools:context=".Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/layout_shadow"
            android:textSize="20sp"
            android:hint="username"
            android:id="@+id/customerUserNameId"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/layout_shadow"
            android:textSize="20sp"
            android:hint="07...."
            android:inputType="phone"
            android:id="@+id/customerNumberId"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/layout_shadow"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:hint="password"
            android:id="@+id/customerPasswordId"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/BtnRegister"
            android:textColor="@android:color/white"
            android:text="@string/register"
            android:background="@color/colorButtons"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_here_to_login"
            android:textColor="@color/colorButtons"
            android:id="@+id/toLoin"/>



    </LinearLayout>

</RelativeLayout>